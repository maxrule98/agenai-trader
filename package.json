{
	"name": "ai-quant",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"services/*"
	],
	"scripts": {
		"build": "pnpm -r --parallel build",
		"dev:gateway": "pnpm --filter ./apps/gateway dev",
		"dev:trader": "pnpm --filter ./apps/trader dev",
		"dev:ui": "pnpm --filter ./apps/ui dev",
		"test": "vitest run --reporter=dot",
		"test:watch": "vitest",
		"lint": "eslint .",
		"typecheck": "tsc -b --verbose",
		"infra:up": "docker compose -f infra/docker/compose.dev.yml up -d",
		"infra:down": "docker compose -f infra/docker/compose.dev.yml down",
		"infra:logs": "docker compose -f infra/docker/compose.dev.yml logs -f"
	},
	"devDependencies": {
		"typescript": "^5.6.3",
		"vitest": "^2.1.3",
		"zod": "^3.23.8",
		"zod-to-json-schema": "^3.23.2",
		"seedrandom": "^3.0.5",
		"@types/seedrandom": "^3.0.8",
		"@types/node": "^22.7.0",
		"tsx": "^4.19.2",
		"eslint": "^9.12.0"
	}
}
